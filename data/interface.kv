# Menu item in the DrawerList list.
<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: .98, .96, .90, 1

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: .98, .96, .90, 1


<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "center"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "data/image/ghost.png"

    MDLabel:
        text: "Settings"
        font_style: "Button"
        halign: "center"
        color: .98, .96, .90, 1
        size_hint_y: None
        height: self.texture_size[1]


    ScrollView:
        DrawerList:
            id: md_list


<Content>
    id: content_conteiner
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "200dp"

    MDTextField:
        id: name_money
        hint_text: "Name of change"
        mode: "fill"

    MDTextField:
        id: data_money
        hint_text: "Change amount"
        mode: "fill"

    BoxLayout:
        orientation: 'horizontal'
        padding: 330
        MDRectangleFlatButton:
            id: cancel_btn
            text: "CANCEL"
            font_size: 12
            theme_text_color: "Custom"
            text_color: self.theme_cls.primary_color
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: app.cancel()

        MDRectangleFlatButton:
            id: accept_btn
            text: "ACCEPT"
            font_size: 12
            theme_text_color: "Custom"
            text_color: self.theme_cls.primary_color
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: app.accept(data_money.text, name_money.text)


Screen:
    MDNavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        title: app.title
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
                        md_bg_color:.17,.18,.18,1

                    MDTabs:
                        id: tabs
                        on_tab_switch: app.on_tab_switch(*args)
                        height:"48dp"
                        tab_indicator_anim: False
                        background_color:.1,.1,.1,1

                        Tab:
                            id: 1
                            title: "History"
                            icon: "view-list"
                            BoxLayout:
                                orientation: 'vertical'
                                padding: "5dp"

                                BoxLayout:
                                    id: box
                                    orientation: 'vertical'

                                    MDLabel:
                                        text: "Soon ..."
                                        # text: "No history yet"
                                        halign: "center"
                                        font_style: "H6"
                        Tab:
                            id: 2
                            title: "Nsr. Expences"
                            icon: "star"
                            BoxLayout:
                                orientation: 'vertical'
                                adaptive_size: True
                                padding: "10dp"

                                MDLabel:
                                    text: f"₽ {app.cash50} BYN"
                                    font_style: "H4"
                                    halign: "center"
                                    theme_text_color: "Custom"
                                    text_color: .22, .83, .25, 1
                                BoxLayout:
                                    orientation: 'horizontal'
                                    adaptive_size: True
                                    padding: "10dp"
                                    MDLabel:
                                        text: f"$ {app.currency_converter('USD', app.cash50)} USD"
                                        icon: "currency-usd"
                                        font_style: "H5"
                                        halign: "center"
                                        theme_text_color: "Secondary"
                                    MDLabel:
                                        text: f"€ {app.currency_converter('EUR', app.cash50)} EUR"
                                        font_style: "H5"
                                        halign: "center"
                                        theme_text_color: "Secondary"
                        Tab:
                            id: 3
                            title: "Unsr. Expences"
                            icon: "penguin"
                            BoxLayout:
                                orientation: 'vertical'
                                adaptive_size: True
                                padding: "10dp"

                                MDLabel:
                                    text: f"₽ {app.cash20} BYN"
                                    font_style: "H4"
                                    halign: "center"
                                    theme_text_color: "Custom"
                                    text_color: .42, .22, .83, 1
                                BoxLayout:
                                    orientation: 'horizontal'
                                    adaptive_size: True
                                    padding: "10dp"
                                    MDLabel:
                                        text: f"$ {app.currency_converter('USD', app.cash20)} USD"
                                        icon: "currency-usd"
                                        font_style: "H5"
                                        halign: "center"
                                        theme_text_color: "Secondary"
                                    MDLabel:
                                        text: f"€ {app.currency_converter('EUR', app.cash20)} EUR"
                                        font_style: "H5"
                                        halign: "center"
                                        theme_text_color: "Secondary"
                        Tab:
                            id: 4
                            title: "Storage"
                            icon: "safe-square"
                            BoxLayout:
                                orientation: 'vertical'
                                adaptive_size: True
                                padding: "10dp"

                                MDLabel:
                                    text: f"₽ {app.cash30} BYN"
                                    font_style: "H4"
                                    halign: "center"
                                    theme_text_color: "Custom"
                                    text_color: .83, .6, .22, 1
                                BoxLayout:
                                    orientation: 'horizontal'
                                    adaptive_size: True
                                    padding: "10dp"
                                    MDLabel:
                                        text: f"$ {app.currency_converter('USD', app.cash30)} USD"
                                        icon: "currency-usd"
                                        font_style: "H5"
                                        halign: "center"
                                        theme_text_color: "Secondary"
                                    MDLabel:
                                        text: f"€ {app.currency_converter('EUR', app.cash30)} EUR"
                                        font_style: "H5"
                                        halign: "center"
                                        theme_text_color: "Secondary"



    MDNavigationDrawer:
        id: nav_drawer
        md_bg_color:.17,.18,.18,1
        padding: 20, 20, 20, 16

        ContentNavigationDrawer:
            id: content_drawer


    MDScreen:
        MDFloatingActionButtonSpeedDial:
            callback: app.call
            data: app.data
            root_button_anim: True
            md_bg_color: .38, .27, .60, 1
            text_color: .38, .27, .60, 1
            icon_color:.38, .27, .60, 1
